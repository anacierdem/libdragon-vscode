{
  "name": "libdragon-vscode",
  "displayName": "Libdragon",
  "description": "Libdragon tools for a better development experience.",
  "version": "0.1.0",
  "publisher": "lici",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.81.0",
    "node": ">=20",
    "npm": ">=10"
  },
  "scripts": {
    "build": "node --loader ts-node/esm ./build/index.mts",
    "tsc": "tsc -p ./",
    "pretest": "tsc",
    "test": "vscode-test"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mips",
        "aliases": [
          "MIPS assembly",
          "mips"
        ],
        "filenamePatterns": [
          "*.S",
          "*.inc"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "mips.rsp",
        "aliases": [
          "RSP MIPS assembly",
          "rsp"
        ],
        "filenamePatterns": [
          "rsp_*.S",
          "rsp_*.inc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mips.rsp",
        "scopeName": "source.mips.rsp",
        "path": "./syntaxes/mips.rsp.tmLanguage.json"
      },
      {
        "language": "mips",
        "scopeName": "source.mips",
        "path": "./syntaxes/mips.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/vscode": "^1.81.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "js-yaml": "^4.1.0",
    "prettier": "3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "vscode-oniguruma": "^1.7.0",
    "vscode-textmate": "^9.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
